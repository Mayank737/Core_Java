package Oopsjava;

public class Automobile {

	  private String color;
	  private int speed;
	  private int gear;
	  private String make;
	String getColor() {
		return color;
	}
	void setColor(String color) {
		this.color = color;
	}
	int getSpeed() {
		return speed;
	}
	void setSpeed(int speed) {
		this.speed = speed;
		for (int i = speed; i < 180; i++) {
			if(i<20)
			{
				System.out.println("First Gear" +i);
				
			}
			if(i)
			{
				System.out.println("Second Gear" +i);
				
			}if(i>60)
			{
				System.out.println("Third Gear" +i);
				
			}if(i>100)
			{
				System.out.println("Fourth Gear" +i);
				
			}if(i>=180)
			{
				System.out.println("Fifth Gear" +i);
				
			}
			
		}
	}
	int getGear() {
		return gear;
	}
	void setGear(int gear) {
		this.gear = gear;
	}
	String getMake() {
		return make;
	}
	void setMake(String make) {
		this.make = make;
	}
	  
	  
	  
}
