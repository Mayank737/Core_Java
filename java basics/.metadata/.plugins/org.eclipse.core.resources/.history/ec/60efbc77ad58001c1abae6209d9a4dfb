package String;

public class reverseonplace {
 public static void main(String[] args) {
	String name = "Mayank Gupta";
	String[] name2 = name.split(" ");
	
	System.out.println("Reversing string is:");
	String a=name2[0];
	String[]b=a.split(" ");
	for (int i=(a.length()-1);1>=0;i--)
	{
		System.out.println(b[i]);
		
	}
     System.out.println(" ");	
	String a1 = name2[1];
	String[] b1 = a1.split("");
	
	for(int i=(a1.length()-1);1>=0;i--)
	{
		System.out.println(b1[i]);
	}
		
}
}